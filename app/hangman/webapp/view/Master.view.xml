<mvc:View
	controllerName="Project.Hangman.hangman.controller.Master"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<ScrollContainer
		height="100%"
		width="100%"
		vertical="true">
		<l:VerticalLayout width="100%" class="submission">
			<l:Grid containerQuery="true"
              defaultSpan="XL12 L12 M12 S12">
        <Text
            text="Hangman"
            class="clsHangmanTitle display-1 text-center"
            textAlign="Center"
            width="100%"
        />
      </l:Grid>

			<l:Grid containerQuery="true"
              defaultSpan="XL6 L6 M6 S6">
				<html:div class="exampleDiv">
        <html:canvas class="canvas" width="580" height="600"></html:canvas>
        <html:p class="text-center guessWord">Guess the word before it's too late!</html:p>
        </html:div>

        <html:div class="col-sm">
          <html:form
            class="text-light p-3 border border-info align-items-end"
            autocomplete="off"
          >
            <html:br />
            <html:br />
            <html:br />
            <html:br />
            <html:br />
            <html:br />
            <html:div class="mb-3" style="line-height: 2">
              <html:p id="answer" class="display-4 mb-5">_ _ _ _</html:p>
              <html:label for="guessInput" class="form-label">
                Guess a letter and click submit
              </html:label>
              <html:br />

              <html:div
                class="d-flex align-baseline justify-content-between"
                style="width: 400"
              >
                <html:input
                  name="guessInput"
                  type="text"
                  class="form-control text-center mr-5"
                  id="guessInput"
                  maxlength="1"
                  style="text-transform: uppercase"
                  onkeypress="return /[a-z]/i.test(event.key)"
                />

                <html:button
                  type="submit"
                  class="btn btn-primary ml-5 mb-0 align-self-end"
                >
                  Submit
                </html:button>
              </html:div>
              <html:p class="display-6 mt-5 my-3" id="feedback"></html:p>
              <html:br />
              <html:br />
              <html:br />
              <html:br />
              <html:br />
            </html:div>
          </html:form>
        </html:div>
			</l:Grid>
		</l:VerticalLayout>
    </ScrollContainer>
</mvc:View>
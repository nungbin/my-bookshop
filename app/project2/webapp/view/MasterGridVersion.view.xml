<mvc:View xmlns="sap.m" 
		  xmlns:mvc="sap.ui.core.mvc"
		  xmlns:table="sap.ui.table"
		  xmlns:core="sap.ui.core"
  	      xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" 
		  xmlns:smartTable="sap.ui.comp.smarttable" 
		  controllerName="project2.project2.controller.MasterGridVersion">
	<Page xmlns="sap.m" id="pageId" title="{i18n>title_grid}" class="sapUiSmallMargin" floatingFooter="true">
	    <content>
	        <VBox id="vbox0" class="sapUiSmallMargin">
                <smartFilterBar:SmartFilterBar id="smartFilterBar" 
				                               entitySet="StudentSrv"
											   persistencyKey="SmartFilterPKey">
					<smartFilterBar:controlConfiguration>
						<smartFilterBar:ControlConfiguration
								key="full_name" label="{i18n>MasterView.FullName}">
						</smartFilterBar:ControlConfiguration>
					</smartFilterBar:controlConfiguration>
                </smartFilterBar:SmartFilterBar>
                <smartTable:SmartTable id="smartTable_ResponsiveTable" 
									   class="sapUiSizeCompact"
				                       smartFilterId="smartFilterBar" 
									   placeToolbarInTable="true"
									   tableType="Table"
									   entitySet="StudentSrv" 
									   useTablePersonalisation="true" 
									   enableAutoBinding="true"
									   ignoredFields="createdAt,createdBy,modifiedAt,modifiedBy"
									   header="Students"
									   persistencyKey="SmartTablePKey"> 
					<!-- layout data used to make the table growing but the filter bar fixed -->
					<smartTable:customToolbar>
						<OverflowToolbar design="Transparent">
							<ToolbarSpacer/>
							<OverflowToolbarButton icon="sap-icon://add"    
							           			   tooltip="Create a new student entry" 
												   text="Create"
												   press="onOpenCreateStudentDialog"/>
						</OverflowToolbar>
					</smartTable:customToolbar>
					<table:Table id="table1" 
								 fixedColumnCount="2"
								 selectionMode="Single"
								 visibleRowCount="3"
								 visibleRowCountMode="Auto"
					>
						<table:columns>
							<table:Column
								width="11rem"
								sortProperty="email"
								filterProperty="email">
								<Label text="Email" />
								<table:customData>
									<core:CustomData key="p13nData"
										value='\{"columnKey": "email", "autoColumnWidth": \{ "visibleProperty": "email" }, "leadingProperty": "email"}' />
								</table:customData>
								<table:template>
									<HBox>
										<Button text="{email}" type="Transparent" press=".onRowPress" class="sapUiTinyMargin"/>
										<Button icon="sap-icon://copy" press=".onClone" class="sapUiTinyMargin"/>
									</HBox>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
                </smartTable:SmartTable>	            
	        </VBox>
	    </content>
	</Page>
</mvc:View>
{
  "name": "my-bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.4",
    "express": "^4"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.0",
    "sqlite3": "^5.0.0"
  },
  "scripts": {
    "start": "cds run",
    "watch-project1": "cds watch --open project1/webapp/index.html#fe-lrop-v4",
    "watch-project2": "cds watch --open project2/webapp/index.html#fe-lrop-v4",
    "watch-hangman": "cds watch --open hangman/webapp/index.html#fe-lrop-v4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "i18n": {
      "folders": [
        "_i18n",
        "i18n",
        " assets/i18n"
      ]
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "db/my-bookshop.db"
        }
      }
    }
  },
  "sapux": [
    "app/project1",
    "app/project2",
    "app/hangman"
  ]
}
